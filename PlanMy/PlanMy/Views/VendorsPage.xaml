<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanMy.Views.VendorsPage"
              Title="{Binding Title}"
            xmlns:views="clr-namespace:PlanMy.Views"
             x:Name="BrowseItemsPage">
    <TabbedPage.Children>
        <NavigationPage Title="Vendors" Icon="profile.png">
            <x:Arguments>
                <views:allVendors />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Favorites" Icon="vendors.png">
            <x:Arguments>
                <views:favourites />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Messages" Icon="planning.png">
            <x:Arguments>
                <views:messages />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>