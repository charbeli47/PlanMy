<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanMy.Views.ForgotPassword">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username" FontSize="16" TextColor="Black" x:Name="UsernameLabel" Margin="40,0,20,0"/>
            <Entry TextColor="Black" Placeholder="Type your username here" x:Name="UsernameEntry" Margin="20,0,20,0"/>
            <Button HorizontalOptions="FillAndExpand" BorderRadius="50" TextColor="White" BackgroundColor="#89b5da" Text="Send Me the New password" Clicked="Button_Clicked" FontSize="16" HeightRequest="50" ></Button>
            <Label Text="" FontSize="16" TextColor="Black" x:Name="servermsg" Margin="80,0,20,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>